{
  "name": "@pulsive/ui-lib",
  "version": "1.6.2",
  "description": "Shared ui library for our frontends",
  "private": true,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist",
    "src"
  ],
  "types": "dist/index.d.ts",
  "styles": "dist/styles/main.css",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup -c --failAfterWarnings",
    "build:local": "npm run build && npm pack",
    "prepare": "npm run build",
    "prerelease": "git checkout main && git pull",
    "release": "npm version $RELEASE_TYPE -m \"build: new release v%s\"",
    "release:prepatch": "RELEASE_TYPE=prepatch npm run release",
    "release:patch": "RELEASE_TYPE=patch npm run release",
    "release:minor": "RELEASE_TYPE=minor npm run release",
    "release:major": "RELEASE_TYPE=major npm run release",
    "postrelease": "git push && git push origin --tags",
    "clean": "rm -rf dist node_modules storybook-static",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@rollup/plugin-commonjs": "^22.0.0",
